    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "initCommands": [
                "platform select remote-android",
            ],
            "targetCreateCommands": [
                "target create ${workspaceFolder}/.debug/exe",
            ],
            "processCreateCommands": [
                "gdb-remote 6666",
                "process handle SIGSEGV -s false -n false",
                "continue"
            ],
            "preLaunchTask": "timogr: debug",
            "postDebugTask": "timogr: stop",
        }
    ]
}