{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "timogr: debug",
            "type": "shell",
            "command": "${workspaceFolder}/dbgtool/dbgtool",
            "args": [
                "-build",
                "start",
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(\\w.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "$^",
                    "endsPattern": "^(Ready for debugger.*)|(Failed.*)|(.*FAILED.*)|(.*FAILURE.*)"
                }
            },
            "dependsOn":["timogr: build tools"]
        },
        {
            "label": "timogr: stop",
            "type": "shell",
            "command": "${workspaceFolder}/dbgtool/dbgtool",
            "args": [
                "stop"
            ]
        },
        {
            "label": "timogr: build tools",
            "type": "shell",
            "command": "go",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dbgtool"
            }
        }
    ]
}
